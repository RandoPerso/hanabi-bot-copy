{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "semi": "error",
        "eol-last": "warn",
        "no-trailing-spaces": ["warn", { "ignoreComments": true }],
        "prefer-const": "warn"
    }
}
